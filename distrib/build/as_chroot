#! /bin/bash -x

  if [ "$1" == "" ]; then
    CMD="/tools/bin/bash -l +h"
  else
    CMD="$1"
  fi

  if [ `id -u` -eq 0 ]; then BCMD="bash"; else BCMD="sudo su"; fi
  ${BCMD} -c "chroot \"..\" /tools/bin/env -i \
    HOME=/root TERM=\"$TERM\" PS1='\u:\w\$ ' \
    PATH=/bin:/usr/bin:/sbin:/usr/sbin:/tools/bin:/build \
    ROOT=\"\" \
    ${CMD};"
